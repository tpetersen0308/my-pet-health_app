<%= form_for(@pet, url: "/users/#{params[:user_id]}/pets") do |f| %>
  <%= f.hidden_field :owner_id, value: params[:user_id] %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <%= f.label :species %> <br>
  <%= f.select :species, options_for_select(['Dog', 'Cat']) %> <br>
  <%= f.label :sex %> <br>
  <%= f.select :sex, options_for_select(['Female', 'Male']) %> <br>
  <%= f.label :birth_date %> <br>
  <%= f.date_select :birth_date %> <br>
  <%= f.submit "Register Pet" %>
<% end %>