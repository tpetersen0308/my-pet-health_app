<%= form_for(pet, url: url_for_pet_form(pet)) do |f| %>

  <%= render "/shared/errors", object: pet %>

  <%= f.hidden_field :owner_id, value: current_user.id %>
  
  <div class="field <%= "field_with_errors" if pet.errors[:name].any? %>">
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
  </div><br>

  <%= f.label :species %>
  <%= f.select :species, ["Dog", "Cat"], selected: pet.species %> 
  <%= f.label :sex %>
  <%= f.select :sex, ['Female', 'Male'], selected: pet.sex %> <br><br>
  <%= f.label :birth_date %> <br>
  <%= f.date_select :birth_date, {start_year: Date.today.year - 20, end_year: Date.today.year} %> <br><br>
  <%= f.submit "Register Pet" %> 
  <%= link_to "Cancel", "#", class: "js-cancel" %> <br> <br>
<% end %>