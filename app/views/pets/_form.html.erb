<%= form_for(@pet) do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <%= f.label :species %> <br>
  <%= f.select :species, options_for_select(['Dog', 'Cat']) %> <br>
  <%= f.label :birth_date %> <br>
  <%= f.date_select :birth_date %> <br>
  <%= f.submit "Register Pet" %>
<% end %>