<% if @search_ok %>
  <h2>Find a Pet:</h2>
  <%= form_tag "/pets/search", id: "js-search" do %> <br>
    <%= label_tag "pet[name]", "Pet's Name:" %> <br>
    <%= text_field_tag "pet[name]" %> <br><br>
    <%= label_tag "pet[species]", "Species:" %>
    <%= select_tag "pet[species]", options_for_select(["Dog", "Cat"]) %> <br><br>
    <%= label_tag "pet[owner_first_name]", "Owner's First Name:" %> <br>
    <%= text_field_tag "pet[owner_first_name]" %> <br>
    <%= label_tag "pet[owner_last_name]", "Owner's Last Name:" %> <br>
    <%= text_field_tag "pet[owner_last_name]" %> <br>
    <%= submit_tag "Find Pet", id: "js-submitSearch" %>
  <% end %>
  <div id="js-searchResults"></div>
<% end %>
<% if @user %>
  <h2> <%= @user.name %>'s <%= (@user.vet? ? "Patient" : "Pet").pluralize(@user.pets.count) %>:</h2>
  <p> <%= link_to "All", user_pets_path(@user) %> | <%= link_to "Dogs", user_pets_species_path(@user, "dogs") %> | <%= link_to "Cats", user_pets_species_path(@user, "cats") %></p>
<% else %>
  <h3 id="pet-index-header">All Pets: </h3>
<% end %>
<%= render(@pets) %>
