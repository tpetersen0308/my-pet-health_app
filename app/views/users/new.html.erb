<h1>Sign Up</h1>

<%= form_tag(users_path) do %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited your signup attempt:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field <%= "field_with_errors" if @user.errors[:first_name].any? %>">
    First Name: <br>
    <%= text_field_tag 'user[first_name]' %> <br>
  </div>

  <div class="field <%= "field_with_errors" if @user.errors[:last_name].any? %>">
    Last Name:  <br>  <%= text_field_tag 'user[last_name]' %> <br>
  </div>

  <div class="field <%= "field_with_errors" if @user.errors[:email].any? %>">
    E-mail:     <br>  <%= text_field_tag 'user[email]' %> <br>
  </div>

  <div class="field <%= "field_with_errors" if @user.errors[:password].any? %>">
    Password:   <br>   <%= password_field_tag 'user[password]' %> <br>
  </div>

  <div class="field <%= "field_with_errors" if @user.errors[:password_confirmation].any? %>">
    Confirm Password: <br>  <%= password_field_tag 'user[password_confirmation]' %> <br>
  </div>
  
  Check if you are a veterinarian: <%= check_box_tag 'vet', true %> <br>
  <%= submit_tag "Sign Up" %>
<% end %>