<h1>Sign Up</h1>

<%= form_tag(users_path) do %>

<%= render "/shared/errors", object: @user %>

  <div class="field <%= field_with_errors(@user, "first_name") %>">
    First Name: <br>
    <%= text_field_tag 'user[first_name]' %> <br>
  </div>

  <div class="field <%= field_with_errors(@user, "last_name") %>">
    Last Name:  <br>  <%= text_field_tag 'user[last_name]' %> <br>
  </div>

  <div class="field <%= field_with_errors(@user, "email") %>">
    E-mail:     <br>  <%= text_field_tag 'user[email]' %> <br>
  </div>

  <div class="field <%= field_with_errors(@user, "password") %>">
    Password:   <br>   <%= password_field_tag 'user[password]' %> <br>
  </div>

  <div class="field <%= field_with_errors(@user, "password_confirmation") %>">
    Confirm Password: <br>  <%= password_field_tag 'user[password_confirmation]' %> <br>
  </div>
  
  Check if you are a veterinarian: <%= check_box_tag 'vet', true %> <br>
  <%= submit_tag "Sign Up" %>
<% end %>